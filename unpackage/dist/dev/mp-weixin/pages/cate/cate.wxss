/* 水平间距 */
.cate-container {
  display: flex;
}
.cate-container .cate-left {
  width: 240rpx;
}
.cate-container .cate-left .cate-left-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  background-color: #efefef;
  font-size: 24rpx;
}
.cate-container .cate-left .cate-left-item.active {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
}
.cate-container .cate-left .cate-left-item.active::before {
  content: '';
  width: 6rpx;
  height: 60rpx;
  background-color: #c00000;
}
.cate-container .cate-left .cate-left-item.active::after {
  content: '';
  width: 6rpx;
  height: 60rpx;
  background-color: #fffff;
}
.cate-container .cate-right .cate-right-item .cate-right-item-title {
  display: flex;
  justify-content: center;
  font-weight: bold;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.cate-container .cate-right .cate-right-item .cate-right-item-content {
  display: flex;
  flex-wrap: wrap;
}
.cate-container .cate-right .cate-right-item .cate-right-item-content .cate-right-item-content-box {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.33%;
  padding: 20rpx;
  box-sizing: border-box;
}
.cate-container .cate-right .cate-right-item .cate-right-item-content .cate-right-item-content-box image {
  width: 100%;
}
.cate-container .cate-right .cate-right-item .cate-right-item-content .cate-right-item-content-box text {
  font-size: 24rpx;
}

