.goods-detail-container {
  padding-bottom: 50px;
}
.goods-detail-container swiper {
  height: 750rpx;
}
.goods-detail-container swiper image {
  width: 100%;
  height: 100%;
}
.goods-detail-container .goods-info-box {
  padding: 10px;
  padding-right: 0;
}
.goods-detail-container .goods-info-box .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-detail-container .goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-detail-container .goods-info-box .goods-info-body .goods-name {
  font-size: 13px;
  padding-right: 10px;
}
.goods-detail-container .goods-info-box .goods-info-body .favi {
  width: 120px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #efefef;
  color: gray;
}
.goods-detail-container .goods-info-box .yf {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}
.goods-detail-container .goods-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

