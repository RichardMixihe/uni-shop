/* 水平间距 */
.goods-item {
  display: flex;
  border-bottom: 1px solid #efefef;
  padding: 8rpx;
}
.goods-item .goods-item-left {
  display: flex;
  align-items: center;
}
.goods-item .goods-item-left .goods-image {
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
}
.goods-item .goods-item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item .goods-item-right .goods-name {
  font-size: 24rpx;
}
.goods-item .goods-item-right .goods-info-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-item .goods-item-right .goods-info-box .goods-price {
  font-size: 32rpx;
  color: #c00000;
}

