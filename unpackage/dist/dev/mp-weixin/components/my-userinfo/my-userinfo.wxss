/* 水平间距 */
.my-userinfo-container {
  height: 100%;
  background-color: #efefef;
}
.my-userinfo-container .top-box {
  height: 400rpx;
  background-color: #c00000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.my-userinfo-container .top-box .avatar {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 10rpx black;
}
.my-userinfo-container .top-box .nickname {
  color: white;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.my-userinfo-container .panel-list {
  padding: 0 20rpx;
  position: relative;
  top: -20rpx;
}
.my-userinfo-container .panel-list .panel {
  background-color: white;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
}
.my-userinfo-container .panel-list .panel .panel-title {
  line-height: 90rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  border-bottom: 2px solid #f4f4f4;
}
.my-userinfo-container .panel-list .panel .panel-body {
  display: flex;
  justify-content: space-around;
}
.my-userinfo-container .panel-list .panel .panel-body .panel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.my-userinfo-container .panel-list .panel .panel-body .panel-item .icon {
  width: 70rpx;
  height: 70rpx;
}
.my-userinfo-container .panel-list .panel .panel-list-item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 0 20rpx;
}

